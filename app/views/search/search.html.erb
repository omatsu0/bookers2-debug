<% if @model == 'user'%>

<div class='row'>
 <div class='col-xs-3'>
  <h2>User info</h2>
  <%= render 'users/profile', user: current_user %>
  <!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

  <h2>New book</h2>
  <%= render 'books/newform', book: @book %>
 </div>

<%= render 'users/index' %>

<% elsif @model == 'book'%>
<div class="row">
    <div class="col-xs-3">

        <h2>User info</h2>
        <%= render 'users/profile', user: current_user %>
        <!--メモ　右側の指定に注意。そこを間違えるとエラーが発生して表示されない -->

        <h2>New book</h2>
        <%= render 'books/newform', book: @booknew %>

    </div>
    <%= render 'books/index' %>

<% end %>

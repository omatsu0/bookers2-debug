<td><%= link_to user_path(book.user.id) do %>
	<%= attachment_image_tag book.user, :profile_image,:fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %><br><%= book.user.name %><% end %>
</td>
<td><%= link_to book.title, book_path(book.id) %></td>
<td><%= book.body %></td>

<td id="favorites_buttons_<%= book.id %>">
	<%= render partial: 'favorites/favorite', locals: { book: book} %>
</td>

<td>コメント数：<%= book.book_comments.count %></td>
<% if book.user.id == current_user.id %>
	<td><%= link_to "Edit", edit_book_path(book.id), class: "btn-sm btn-success edit_book_#{book.id}" %></td>
	<td><%= link_to "Destroy", book_path, class: "btn-sm btn-danger destroy_book_#{book.id}" , method: :delete, data: {confirm: "本当に消しますか?"} %></td>
<% end %>